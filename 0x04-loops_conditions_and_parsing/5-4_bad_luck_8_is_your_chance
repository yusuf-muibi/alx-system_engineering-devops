#!/usr/bin/env bash
# This script loops from 1 to 10 and displays different messages based on the loop iteration

# Initialize a counter variable
counter=0

# Using a while loop to iterate from 1 to 10
while (( counter < 10 )); do
    # Check the loop iteration and display messages accordingly
    if (( counter == 3 )); then
        echo "bad luck"
    elif (( counter == 7 )); then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((counter++))
done